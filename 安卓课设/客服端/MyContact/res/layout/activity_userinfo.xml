<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  
    android:layout_height="match_parent" 
    android:background="@drawable/pen" >



    <Button
        android:id="@+id/returnback"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:onClick="back_to_login"
        android:text="退出" />

    <Button
        android:id="@+id/xiugai"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_above="@+id/returnback"
        android:layout_alignLeft="@+id/returnback"
        android:layout_marginBottom="19dp"
        android:text="修改密码" />

    <TextView
        android:id="@+id/u_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/u_mima"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Silver"
        android:textColorHint="@color/blue"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/u_mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Silver"
        android:textColorHint="@color/Silver"
        android:textSize="20dp" />

    <Button
        android:id="@+id/mycontact"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/returnback"
        android:layout_marginTop="50dp"
        android:text="通讯录" />
  
</RelativeLayout>
